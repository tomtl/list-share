<%= render '/shared/content_title', title: @user.username %>

<div class = 'well'>
  <dl class='dl-horizontal'>
    <dt>Username:</dt>
    <dd><%= @user.username %></dd>
    <dt>Email:</dt>
    <dd><%= @user.email %></dd>
    <dt>Time zone:</dt>
    <dd><%= @user.timezone %></dd>
  </dl>
</div>

<h5><%= @user.username %> 's To-Do Items: </h5>
<% @user.to_do_items.each do |to_do_item| %>
  <%= render 'items/item', item: to_do_item %>
<% end %>
