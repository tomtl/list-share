<% header = "#{link_to('All Lists', lists_path)} &raquo; #{link_to(@list.name, list_path(@list))} &raquo; Add/Remove Users".html_safe %>
<%= render 'shared/content_title', title: header %>

<div class='span8 well'>
  <h4>Users with access to this list</h4>
  <% @list.users.each do |user| %>
    <ul>
      <li><%= user.username %></li>
      
      <p class='pull-right'>
        <%= link_to 'Remove', list_list_user_path(@list, @list.list_users.find_by(user: user)), method: 'delete' %>
      </p>
      
    </ul>
  <% end %>
</div>

<div class='span8 well'>
  <%= form_for [@list, @list_user] do |f| %>
    <div class='control-group'>
      <%= f.label :user, "User name:" %>
      <%= f.text_field :user %>
    </div>
    <%= f.submit "Add user to list", class:'btn btn-primary' %>
  <% end %>
</div>