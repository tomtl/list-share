<%= render 'shared/content_title', title: "Edit List" %>
<%= render 'shared/errors', obj: @list %>
<%= render 'form' %>

<div class='span8 well'>
  <h4>Users with access to this list</h4>
  <% @list.users.each do |user| %>
    <ul>
      <li><%= user.username %></li>
    </ul>
  <% end %>

  <%= form_for @list do |list_form| %>
    <% @list.users.each do |user| %>
      <%= list_form.fields_for user, index: user.id do |user_form| %>
        <%= user_form.label :username %>
        <%= user_form.text_field :username %>
      <% end %>
    <% end %>
    <%= list_form.submit "Add user", class:'btn btn-primary' %>
  <% end %>
</div>
