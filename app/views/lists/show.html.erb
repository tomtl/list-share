<% header = "#{link_to('All Lists', lists_path)} &raquo; #{@list.name} List".html_safe %>
<%= render 'shared/content_title', title: header %>
<%= render 'shared/errors', obj: @item %>

<!--show item-->
<% @list.items.each do |item| %>
  <div class='span8 well'>
    <p><%= link_to item.name, list_item_path(@list, item) %></p>

    <% if item.completed_by.nil? %>
      <p>added by <%= link_to item.creator.username, user_path(item.creator) %></p>
      <%= link_to complete_list_item_path(item.list, item, completed: true), method: 'post' do %>
        <div class='btn btn-success nav-item'>
          <i class = 'icon-ok'></i>
          Mark complete
        </div>
      <% end %>
    <% end %>

    <% if !item.completed_by.nil? %>
      <i class = 'icon-ok'></i>
      Completed by <%= link_to item.completer.username, user_path(item.completed_by) %>
    <% end %>
  </div>
<% end %>

<!--new item-->
<div class='span8 well'>
  <%= form_for [@list, @item] do |f| %>
    <div class='control-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit "Add item", class:'btn btn-primary' %>
  <% end %>
</div>

<!-- edit list -->
<div class='span8'>
  <%= link_to "Edit this list", edit_list_path(@list), class:'btn btn-primary' %>
</div>
<br/>
