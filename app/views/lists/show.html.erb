<% header = "#{link_to('All Lists', lists_path)} &raquo; #{@list.name} List".html_safe %>
<%= render 'shared/content_title', title: header %>
<%= render 'shared/errors', obj: @item %>

<!--show item-->
<% @list.items.each do |item| %>
  <%= render 'items/item', item: item %>
<% end %>

<!--new item-->
<%= render 'items/form', item: @item, list: @list %>

<!-- edit list -->
<div class='span8'>
  <%= link_to "Edit list name", edit_list_path(@list), class:'btn btn-primary' %>
  <%= link_to "Add/Remove users", new_list_list_user_path(@list), class:'btn btn-primary' %>
</div>
<br/>
